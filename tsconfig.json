{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES6"],
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": ["node","jest"],
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
